{
  "$schema": "https://github.com/christianearle01/claude-config-template/blob/main/templates/user-preferences-schema.json",
  "_comment": "User Preferences for Claude Code - Auto-generated, do not edit manually unless you know what you're doing",
  "_version": "3.12.0",
  "_documentation": "https://github.com/christianearle01/claude-config-template/blob/main/docs/02-optimization/personalization-guide.md",

  "version": "3.12.0",
  "createdAt": "2025-12-16T00:00:00Z",
  "lastUpdated": "2025-12-16T00:00:00Z",

  "profile": {
    "_comment": "User profile information - helps skills provide relevant suggestions",
    "experienceLevel": "intermediate",
    "_experienceLevelOptions": ["beginner", "intermediate", "advanced", "expert"],

    "primaryLanguages": ["javascript", "typescript"],
    "_primaryLanguagesHint": "Languages you use most often - helps prioritize relevant suggestions",

    "primaryFrameworks": [],
    "_primaryFrameworksHint": "Frameworks you use (react, vue, django, express, etc.)",

    "proactivityLevel": "medium",
    "_proactivityLevelOptions": {
      "low": "Only show high-confidence suggestions, minimal interruption",
      "medium": "Balanced approach - show relevant suggestions at appropriate times",
      "high": "Show all suggestions including optional ones, maximum assistance"
    },

    "preferredWorkflow": "wizard",
    "_preferredWorkflowOptions": ["wizard", "manual", "automated"]
  },

  "confidenceThresholds": {
    "_comment": "Thresholds that determine when skills show suggestions (0-100)",

    "autoApply": 95,
    "_autoApplyHint": "Actions with confidence >= this are auto-applied (dangerous, keep high)",

    "suggestProminently": 75,
    "_suggestProminentlyHint": "Actions with confidence >= this are suggested prominently",

    "showAsOptional": 50,
    "_showAsOptionalHint": "Actions with confidence >= this are shown as optional",

    "hideBelow": 30,
    "_hideBelowHint": "Actions with confidence < this are hidden (reduces noise)"
  },

  "skillUsageFrequency": {
    "_comment": "Tracks which skills you use most - auto-populated by skills",
    "_example": {
      "version-management": {
        "count": 0,
        "lastUsed": null,
        "averageSessionDuration": null
      }
    }
  },

  "learnedPreferences": {
    "_comment": "Preferences learned from your accept/reject/skip decisions",

    "coding-style": {
      "_comment": "Code style preferences learned over time",
      "_example": {
        "early-returns": {
          "acceptanceRate": 0.0,
          "sampleSize": 0,
          "lastUpdated": null,
          "trend": "neutral"
        }
      }
    },

    "workflow": {
      "_comment": "Workflow preferences (commit style, branching, etc.)",
      "preferred-commit-style": null,
      "_preferredCommitStyleOptions": ["conventional", "semantic", "simple", "detailed"],

      "auto-stage-changes": null,
      "preferred-branch-naming": null,
      "_preferredBranchNamingOptions": ["feature/", "feat/", "fix/", "custom"]
    },

    "quality": {
      "_comment": "Quality gate preferences",
      "security-scan-threshold": "high",
      "_securityScanThresholdOptions": ["critical-only", "high", "medium", "all"],

      "test-coverage-target": 80,
      "lint-on-commit": true
    },

    "documentation": {
      "_comment": "Documentation preferences",
      "auto-update-changelog": true,
      "include-jsdoc": null,
      "readme-style": null
    }
  },

  "skippedRecommendations": {
    "_comment": "Recommendations you've skipped - won't be suggested again",
    "_schema": {
      "item": "string - the recommendation ID",
      "skipCount": "number - how many times skipped",
      "firstSkipped": "ISO date - when first skipped",
      "lastSkipped": "ISO date - when last skipped",
      "permanent": "boolean - true if user said 'don't ask again'"
    },
    "items": []
  },

  "dontShowAgain": {
    "_comment": "Specific notifications/warnings you've dismissed permanently",
    "items": []
  },

  "skillSpecificPreferences": {
    "_comment": "Preferences specific to individual skills",

    "security-scanner": {
      "showInfoLevel": true,
      "autoFixLowRisk": false,
      "ignoredPatterns": []
    },

    "test-generator": {
      "defaultFramework": null,
      "coverageReminders": true,
      "generateMocks": true
    },

    "standards-enforcer": {
      "strictMode": false,
      "autoFormat": true,
      "customRules": []
    },

    "commit-readiness-checker": {
      "requireChangelog": true,
      "requireTests": false,
      "conventionalCommits": true
    },

    "version-management": {
      "autoSyncFiles": true,
      "bumpStrategy": "semver"
    }
  },

  "learningHistory": {
    "_comment": "Recent learning events - keeps last 100 per category for analysis",
    "_maxEventsPerCategory": 100,
    "_schema": {
      "timestamp": "ISO date",
      "skill": "skill name",
      "category": "preference category",
      "item": "specific item",
      "action": "accepted | rejected | skipped | dont-show-again",
      "context": "optional context string"
    },
    "events": []
  },

  "analytics": {
    "_comment": "Aggregated analytics about your usage patterns",

    "totalDecisionsTracked": 0,
    "learningPeriodDays": 0,
    "firstEventDate": null,
    "lastEventDate": null,

    "categoryBreakdown": {
      "_comment": "Decisions by category",
      "coding-style": { "accepted": 0, "rejected": 0, "skipped": 0 },
      "workflow": { "accepted": 0, "rejected": 0, "skipped": 0 },
      "quality": { "accepted": 0, "rejected": 0, "skipped": 0 },
      "documentation": { "accepted": 0, "rejected": 0, "skipped": 0 }
    },

    "overallAcceptanceRate": 0.0,
    "topAcceptedPatterns": [],
    "topRejectedPatterns": []
  },

  "tuningSuggestions": {
    "_comment": "AI-generated tuning recommendations based on usage patterns (v3.10.0)",

    "lastAnalyzedAt": null,
    "analysisIntervalDays": 7,
    "_analysisIntervalHint": "How often to run automatic analysis (days)",

    "minimumSampleSize": 20,
    "_minimumSampleSizeHint": "Minimum decisions before generating suggestions",

    "pendingSuggestions": [],
    "_pendingSuggestionsSchema": {
      "id": "unique-suggestion-id",
      "type": "threshold | proactivity | skill-specific | category",
      "category": "affected category (if applicable)",
      "currentValue": "current setting value",
      "suggestedValue": "recommended new value",
      "confidence": "high | medium | low",
      "rationale": "human-readable explanation",
      "dataPoints": {
        "acceptanceRate": 0.0,
        "rejectionRate": 0.0,
        "sampleSize": 0,
        "trend": "improving | stable | declining"
      },
      "createdAt": "ISO date",
      "status": "pending | applied | dismissed | snoozed"
    },

    "suggestionHistory": [],
    "_suggestionHistorySchema": {
      "id": "suggestion-id",
      "action": "applied | dismissed | snoozed",
      "actionAt": "ISO date",
      "snoozeUntil": "ISO date (if snoozed)",
      "userFeedback": "optional user comment"
    },

    "thresholds": {
      "_comment": "Configurable thresholds for triggering suggestions",
      "triggerAnalysis": {
        "minDecisions": 20,
        "_minDecisionsHint": "Minimum decisions before any analysis",

        "rejectionRateHigh": 0.4,
        "_rejectionRateHighHint": "Suggest raising threshold if rejection > this",

        "acceptanceRateLow": 0.6,
        "_acceptanceRateLowHint": "Suggest lowering proactivity if acceptance < this",

        "acceptanceRateHigh": 0.9,
        "_acceptanceRateHighHint": "Suggest raising proactivity if acceptance > this"
      },
      "confidenceScoring": {
        "highConfidenceSamples": 50,
        "mediumConfidenceSamples": 20,
        "_hint": "Sample sizes for confidence levels: High (>=50), Medium (>=20), Low (<20)"
      }
    },

    "autoTuning": {
      "_comment": "Automatic tuning settings",
      "enabled": false,
      "_enabledHint": "If true, automatically applies high-confidence suggestions",

      "requireConfirmation": true,
      "_requireConfirmationHint": "If true, show suggestion before auto-applying",

      "maxAutoApplyPerWeek": 2,
      "_maxAutoApplyPerWeekHint": "Limit auto-applied suggestions to prevent rapid changes"
    }
  },

  "crossProjectLearning": {
    "_comment": "Cross-project pattern aggregation and recommendations (v3.12.0)",

    "enabled": true,
    "_enabledHint": "Set to false to disable cross-project analysis",

    "lastAggregatedAt": null,
    "aggregationIntervalDays": 7,
    "_aggregationIntervalHint": "How often to run automatic cross-project analysis (days)",

    "projectPatterns": {
      "_comment": "Patterns detected across projects from registry",
      "_schema": {
        "pattern": "pattern identifier",
        "projectCount": "number of projects using this",
        "projectList": ["project-ids"],
        "adoptionRate": 0.0,
        "firstSeen": "ISO date",
        "category": "workflow | coding-style | quality | documentation"
      },
      "patterns": []
    },

    "consistencyReport": {
      "_comment": "Divergence detection across projects",
      "lastGeneratedAt": null,
      "divergences": [],
      "_divergenceSchema": {
        "setting": "setting path (e.g., workflow.preferred-commit-style)",
        "globalPreference": "your usual choice",
        "divergentProjects": ["project-ids with different values"],
        "severity": "info | warning | action-recommended"
      }
    },

    "crossProjectSuggestions": {
      "_comment": "Recommendations based on cross-project analysis",
      "pending": [],
      "history": [],
      "_suggestionSchema": {
        "id": "unique-suggestion-id",
        "type": "propagate | standardize | detect-outlier",
        "pattern": "the pattern in question",
        "sourceProjects": ["project-ids where pattern is used"],
        "targetProjects": ["project-ids where pattern should apply"],
        "confidence": "high | medium | low",
        "rationale": "human-readable explanation",
        "createdAt": "ISO date",
        "status": "pending | applied | dismissed"
      }
    },

    "thresholds": {
      "_comment": "Configurable thresholds for cross-project analysis",

      "minProjectsForPattern": 3,
      "_minProjectsHint": "Minimum projects sharing a pattern to consider it 'established'",

      "divergenceAlertThreshold": 0.3,
      "_divergenceAlertHint": "Alert if >30% of projects diverge from established pattern",

      "propagateConfidence": 0.8,
      "_propagateConfidenceHint": "Minimum adoption rate to suggest propagating to new projects",

      "minProjectsForAnalysis": 3,
      "_minProjectsForAnalysisHint": "Minimum projects in registry before enabling analysis"
    }
  },

  "importExport": {
    "_comment": "Import/Export tracking and configuration (v3.13.0)",

    "lastExportAt": null,
    "lastImportAt": null,

    "exportHistory": [],
    "_exportHistorySchema": {
      "exportedAt": "ISO date",
      "exportType": "full | partial | anonymized | template",
      "exportPath": "file path",
      "sectionsIncluded": ["list of exported sections"],
      "checksum": "sha256 hash for verification"
    },

    "importHistory": [],
    "_importHistorySchema": {
      "importedAt": "ISO date",
      "sourceFile": "file path",
      "sourceVersion": "version of exported file",
      "mergeStrategy": "overwrite | merge | selective",
      "sectionsImported": ["list of imported sections"],
      "conflictsResolved": 0,
      "backupPath": "path to backup created before import"
    },

    "safetySettings": {
      "_comment": "Safety features for import operations",

      "createBackupBeforeImport": true,
      "_createBackupHint": "Always create backup before importing (recommended)",

      "validateSchemaVersion": true,
      "_validateSchemaHint": "Check version compatibility before importing",

      "requireConfirmation": true,
      "_requireConfirmationHint": "Show preview and require confirmation before applying",

      "maxImportsPerDay": 5,
      "_maxImportsHint": "Prevent accidental repeated imports"
    },

    "defaults": {
      "_comment": "Default settings for export operations",

      "exportPath": "~/claude-preferences-export.json",
      "_exportPathHint": "Default location for exported preferences",

      "defaultExportType": "full",
      "_defaultExportTypeOptions": ["full", "partial", "anonymized", "template"],

      "includeAnalytics": true,
      "_includeAnalyticsHint": "Include usage analytics in full exports",

      "includeLearningHistory": false,
      "_includeLearningHistoryHint": "Include detailed learning events (can be large)",

      "includeProjectPatterns": true,
      "_includeProjectPatternsHint": "Include cross-project patterns in exports"
    },

    "templates": {
      "_comment": "Template usage tracking (v3.14.0)",

      "appliedTemplate": null,
      "_appliedTemplateHint": "ID of the last template applied",

      "appliedAt": null,
      "_appliedAtHint": "When the last template was applied",

      "templateHistory": [],
      "_templateHistorySchema": {
        "templateId": "template ID (e.g., 'balanced', 'security-first')",
        "appliedAt": "ISO date when applied",
        "mergeStrategy": "merge strategy used (usually 'merge')"
      }
    }
  },

  "remoteSources": {
    "_comment": "Remote template source configuration (v4.0.0)",

    "enabled": true,
    "_enabledHint": "Set to false to disable remote template fetching",

    "sources": [],
    "_sourcesSchema": {
      "id": "unique-source-id",
      "name": "Human-readable name",
      "catalogUrl": "URL to catalog JSON",
      "addedAt": "ISO date",
      "lastFetched": "ISO date",
      "templateCount": 0,
      "trusted": false
    },

    "cache": {
      "_comment": "Local cache of remote template metadata",
      "lastRefreshed": null,
      "templates": []
    },

    "settings": {
      "autoRefresh": true,
      "_autoRefreshHint": "Automatically check for updates",

      "refreshIntervalDays": 7,
      "_refreshIntervalHint": "Days between automatic refresh",

      "verifyChecksums": true,
      "_verifyChecksumsHint": "Verify template integrity (recommended)",

      "allowHttpSources": false,
      "_allowHttpHint": "Only allow HTTPS sources (security)"
    }
  },

  "backup": {
    "_comment": "Backup information - skills create backups before major changes",
    "lastBackup": null,
    "backupLocation": "~/.claude/user-preferences.json.backup",
    "autoBackup": true
  },

  "migrations": {
    "_comment": "Schema migration history",
    "applied": []
  }
}
